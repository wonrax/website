---
import Layout from "../layouts/Layout.astro";
import RecommenderFeed from "../components/RecommenderFeedSolid.tsx";
import ToasterProvider from "@/components/ToasterProvider";
---

<Layout
  seoProps={{
    title: "Recommender Feed",
    description: "Personalized article recommendations",
    noindex: true,
  }}
>
  <ToasterProvider client:only="solid-js" />
  <main class="recommender-main">
    <h3>Recommender Feed</h3>
    <RecommenderFeed client:only="solid-js" />
  </main>
</Layout>

<style lang="scss" is:global>
  .recommender-main {
    max-width: 700px;
    margin: 32px auto;
    padding: 0 16px;
  }

  .feed-controls {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--bg-additive-medium);
  }

  .control-group {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .control-label {
    font-size: 13px;
    color: var(--text-body-light);
    min-width: 60px;
  }

  .button-group {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .toggle-btn {
    padding: 5px 10px;
    font-size: 13px;
    background: var(--bg-additive-light);
    color: var(--text-body-medium);
    border: 1px solid var(--bg-additive-medium);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.15s ease;

    &:hover {
      background: var(--bg-additive-medium);
    }

    &.active {
      background: var(--text-body-heavy);
      color: var(--bg-color);
      border-color: var(--text-body-heavy);
    }
  }

  .new-items-banner {
    position: sticky;
    top: 16px;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    padding: 12px 16px;
    margin-bottom: 16px;
    background: var(--bg-additive-light);
    border: 1px solid var(--bg-additive-medium);
    border-radius: 8px;
    font-size: 14px;
    box-shadow: 0 2px 8px var(--bg-additive-medium);
  }

  .refresh-btn {
    padding: 6px 12px;
    background: var(--text-body-heavy);
    color: var(--bg-color);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 13px;
    font-weight: 500;

    &:hover {
      opacity: 0.9;
    }
  }

  .feed-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feed-entry {
    margin-bottom: 24px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2px;
  }

  .feed-date {
    color: var(--text-body-light);
    font-size: 12px;
    line-height: 1.3;
  }

  .feed-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-body-link);
    text-decoration: none;
    word-break: break-word;
    overflow-wrap: anywhere;
    line-height: 1.4;

    &:visited {
      color: var(--text-body-link-visited);
    }
  }

  .feed-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 8px;
    margin-top: 4px;
    font-size: 13px;
    color: var(--text-body-light);
  }

  .feed-source {
    color: var(--text-body-medium);
    text-decoration: underline dotted;
  }

  .feed-sources {
    color: var(--text-body-light);
  }

  .source-tag {
    background: var(--bg-additive-light);
    padding: 1px 6px;
    border-radius: 4px;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .load-more-btn {
    display: block;
    width: 100%;
    padding: 10px;
    margin-top: 32px;
    background: var(--bg-additive-light);
    color: var(--text-body-heavy);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;

    &:hover {
      background: var(--bg-additive-medium);
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }
</style>
