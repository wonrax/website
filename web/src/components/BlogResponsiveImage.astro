---
import ResponsiveImage from "./ResponsiveImage.astro";

type Props = {
  src: string;
  alt: string;
  width?: number | string;
  height?: number | string;
  featuretype?: string;
};

const { src, width, height, alt } = Astro.props;

let parsedWidth: number | undefined;
let parsedHeight: number | undefined;

if (typeof width === "string") parsedWidth = parseInt(width);
else parsedWidth = width;
if (typeof height === "string") parsedHeight = parseInt(height);
else parsedHeight = height;
---

<ResponsiveImage
  src={src}
  alt={alt}
  width={parsedWidth}
  height={parsedHeight}
  format="webp"
  quality={95}
  deviceSizes={[400, 800, 1200, 2048, 3840, 5760]}><slot /></ResponsiveImage
>
