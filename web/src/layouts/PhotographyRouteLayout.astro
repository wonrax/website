---
import Layout from "./Layout.astro";
import { type Props as RootLayoutProps } from "./Layout.astro";

export type Props = RootLayoutProps;
---

<Layout seoProps={Astro.props.seoProps}>
  <slot name="head" slot="head" />
  <div class="photography-layout">
    <nav class="nav-bar">
      <div class="nav-bar-content">
        <a href="/" class="logo-name-text">Home</a>
        <a href="/blog" class="nav-bar-link-item">Blog</a>
        <a href="/photography" class="nav-bar-link-item">Photography</a>
        <a href="/great-reads" class="nav-bar-link-item">Bookmarks</a>
      </div>
    </nav>
    <slot />
  </div>
</Layout>

<style lang="scss" is:global>
  .photography-layout {
    min-height: 100vh;
    background-color: var(--bg-color);
    margin: 0;
    margin-top: 32px;

    /* Simple centered layout without grid complexity */
    display: flex;
    flex-direction: column;
    align-items: center;

    /* Content wrapper for readable width */
    .photography-content {
      width: 100%;
      max-width: 700px;
      margin: 0 auto;
      padding: 0 16px;
      box-sizing: border-box;

      @media (max-width: 768px) {
        padding: 0 12px;
      }
    }

    a {
      text-decoration: underline;
      color: var(--text-body-link);
      &:visited {
        color: var(--text-body-link-visited);
      }
    }
  }

  .photography-layout .nav-bar {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 32px 0 0 0;
    margin-bottom: 32px;
  }

  .photography-layout .nav-bar-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 16px;
    max-width: 1004px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
    padding: 0 16px;

    @media (max-width: 1100px) {
      max-width: 700px;
      padding: 0 16px;
    }

    .logo-name-text {
      font-weight: var(--font-weight-medium);
    }

    .nav-bar-link-item {
      font-weight: 400;
    }
  }
</style>

