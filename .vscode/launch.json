{
    // The following are sample configurations for common case scenarios of debugging
    // Rust in Visual Studio Code
    //
    // For syntax, visit: https://go.microsoft.com/fwlink/?linkid=830387
    //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug hhai.dev www",
            "request": "launch",
            "runtimeExecutable": "turbo",
            "runtimeArgs": [
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std"
        },
        {
            "name": "Debug hhai.dev API",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/api",
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "cargo debug build api",
        },
    ],
    "compounds": [
        {
            "name": "hhai.dev full",
            "configurations": [
                "Debug hhai.dev API",
                "Debug hhai.dev www"
            ],
            "stopAll": true
        }
    ]
}