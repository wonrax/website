{
  // enable tailwind code completion and hinting
  // this enables you to do these:
  // `const styles = "flex flex-col"`
  // ```
  // const divStyles = [
  //   "max-w-full",
  //   "text-sm"
  // ].join(" ")
  // ```
  "tailwindCSS.experimental.classRegex": [
    ["\\S*.*[Ss]tyles\\S* = \\[([\\s\\S]+?)(?=][\\n;.])", "\"([^\"]*)\""],
    "\\S*.*[Ss]tyles\\S* ?[:=]\\s*\n*\\s*[\"`'](.*)[\"`']"
  ],
  // temporary fix
  // see https://github.com/prettier/prettier-vscode/issues/3020
  // "prettier.prettierPath": "./node_modules/prettier",
  "cSpell.words": [
      "hhai",
      "sqlx"
  ]
}
