{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,

    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "esModuleInterop": true,

    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}