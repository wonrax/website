{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    // All packages are built with ESBuild, so we can use `moduleResolution: 'bundler'`
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
}
