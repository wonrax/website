---
import RootLayout from "@/layouts/Layout.astro";
import GitHub from "@/components/Logo/GitHubSolid";
import config from "@/config";
---

<RootLayout>
  <title slot="head">Login to hhai.dev</title>
  <meta slot="head" name="description" content="Login page to hhai.dev" />
  <main>
    <h1>Login to hhai.dev</h1>
    <a href={`${config.API_URL}/identity/login/oidc/github`}>
      <GitHub width={24} />
      Continue with GitHub
    </a>
  </main>
</RootLayout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    padding-top: 128px;
    box-sizing: border-box;
  }

  h1 {
    margin-bottom: 24px;
    font-size: 20px;
    font-weight: 700;
    color: var(--black-1);
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 12px 28px;
    border: none;
    border-radius: 12px;
    background-color: var(--black-1);
    color: var(--white-1);
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
  }

  a:hover {
    background-color: var(--grey-5);
  }

  a:focus {
    outline: none;
    box-shadow: 0 0 0 3px var(--color-blue-300);
  }
</style>
