---
import { Comments, Sheet, Trigger } from "@/components/BlogCommentsSolid";
import OgImage from "@/components/OgImage/OgImage.astro";
import "@fontsource/inconsolata/500.css";
import "katex/dist/katex.css";
import TableOfContents from "../components/TableOfContents.astro";
import BlogRouteLayout from "./BlogRouteLayout.astro";

export type Frontmatter = {
  title: string;
  description: string;
  published: string;
  updated: string;
  tags: string[];
  isDraft?: boolean;
  hidden?: boolean;
  ogImageUrl?: string;
};

export type Heading = {
  text: string;
  slug: string;
  depth: number;
};

type Props = {
  frontmatter: Frontmatter;
  headings: Heading[];
};

const postSlug = Astro.url.pathname.split("/").pop();

const post = Astro.props.frontmatter;
const headings = Astro.props.headings;

const ogImageUrl = post.ogImageUrl || Astro.url.pathname + "og-image.png";
---

<BlogRouteLayout>
  <title slot="head">{post.title}</title>
  <meta slot="head" name="description" content={post.description} />
  <OgImage slot="head" ogImageUrl={ogImageUrl} />
  <main class="blog-post-main">
    <div class="right-sidebar">
      <div class="right-sidebar-content">
        {
          headings.length ? (
            <>
              <TableOfContents headings={headings} />
              <Trigger client:load>View discussion</Trigger>
              <button id="go-to-top">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="21"
                  height="21"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-chevron-up"
                >
                  <path d="m18 15-6-6-6 6" />
                </svg>
                Go to top
              </button>
            </>
          ) : null
        }
        <!-- <div class="mt-6">
          <ScrollToTopButton />
        </div> -->
      </div>
    </div>
    <article class="article">
      <div class="post-header">
        <h1>
          {post.title}
        </h1>
        <div class="separator">
          <span class="article-date">
            {
              new Date(post.published).toLocaleDateString("en-UK", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </span>
          <span class="separator-line"></span>
          {
            post.tags &&
              post.tags.map((tag) => <span class="post-tag">#{tag}</span>)
          }
        </div>
      </div>
      <div class="article-body">
        {
          post.isDraft ? (
            <div class="feature-aside">
              <aside class="callout callout-warning">
                <div class="callout-title">Draft</div>
                <div class="callout-content">
                  <p>
                    This post is a draft and is not yet ready for public
                    viewing.
                  </p>
                </div>
              </aside>
            </div>
          ) : null
        }
        <slot />
      </div>
    </article>
  </main>
  <Sheet client:load>
    <Trigger class="close-button" client:load>X</Trigger>
    {postSlug && <Comments client:load slug={postSlug} />}
  </Sheet>
</BlogRouteLayout>

<style lang="scss" is:global>
  :root {
    --bg-aside: var(--bg-additive-light);
    --bg-code-block: var(--white-2);
    --bg-code-inline: var(--bg-additive-light);
    --bg-code-block-elevated-active: var(--white-1);
    --bg-code-block-elevated-hover: var(--white-3);
    --bg-code-block-highlighted-line: var(--bg-additive-light);
    --code-block-accent: var(--grey-5);
    --text-code-block-line-number: var(--grey-2);

    @media (prefers-color-scheme: dark) {
      --bg-aside: var(--bg-additive-light);
      --bg-code-block: var(--bg-additive-light);
      --bg-code-inline: var(--bg-additive-light);
      --bg-code-block-elevated-active: var(--bg-additive-medium);
