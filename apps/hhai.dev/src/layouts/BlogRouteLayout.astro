---
import Layout from "./Layout.astro";
---

<Layout>
  <slot name="head" slot="head" />
  <div class="blog-container">
    <nav class="nav-bar">
      <div class="nav-bar-content">
        <a href="/" class="logo-name-text"> Ha Huy Long Hai</a>
        <a href="/blog" class="nav-bar-link-item"> Blog</a>
      </div>
    </nav>
    <slot />
  </div>
  <footer class="footer">
    <div class="nav-bar-content">
      <a href="/" class="logo-name-text"> Ha Huy Long Hai</a>
      <a href="/blog" class="nav-bar-link-item"> Blog</a>
    </div>
  </footer>
</Layout>

<style lang="scss" is:global>
  .blog-container {
    min-height: 100vh;
    background-color: var(--bg-color);
  }

  .nav-bar {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 48px 0 16px 0;
  }

  .nav-bar-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 32px;
    max-width: 1004px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;

    @media (max-width: 1280px) {
      max-width: 700px;
      padding: 0;
    }

    @media (max-width: 800px) {
      padding: 0 32px;
    }

    .logo-name-text {
      font-size: 18px;
      font-weight: var(--font-weight-medium);
    }

    .nav-bar-link-item {
      font-size: 16px;
      font-weight: 400;
    }
  }

  .footer {
    background-color: var(--bg-additive-light);
    padding: 32px 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: start;
    // height: 10vh;
  }
</style>
