{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "declaration": true,
    // "emitDeclarationOnly": true,
    "strict": true,
    // All packages are built with ESBuild, so we can use `moduleResolution: 'bundler'`
    "moduleResolution": "bundler",
    "module": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
}

