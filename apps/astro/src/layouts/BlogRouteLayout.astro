---
import Layout from "./Layout.astro";

const { title = "Blog" } = Astro.props;
---

<Layout title={title}>
  <div>
    <div class="min-h-screen">
      <div class="w-full border-b flex flex-row justify-center py-3 mb-8">
        <div class="flex flex-row items-center gap-10 w-[1024px]">
          <div class="flex flex-row gap-3">
            <img
              height={20}
              width={20}
              src="/favicon.svg"
              alt="hhai.dev logo"
            />
            <a href="/" class="text-gray-900 tracking-normal font-medium w-fit">
              Ha Huy Long Hai
            </a>
          </div>
          <a href="/blog" class="text-gray-600 text-sm font-medium"> Blog</a>
          <a href="/blog" class="text-gray-600 text-sm font-medium">
            Snippets</a
          >
          <a href="/blog" class="text-gray-600 text-sm font-medium"> as</a>
        </div>
      </div>
      <slot />
    </div>
    <footer class="py-12 bg-gray-50">
      <div class="w-full max-w-[900px] mx-auto flex flex-row gap-10">
        <a href="/" class="text-gray-700 font-bold w-fit"> hhai.dev</a>
        <div class="flex flex-col gap-2">
          <a href="/" class="text-gray-700"> home</a>
          <a href="/blog" class="text-gray-700"> blog</a>
        </div>
        <div class="flex flex-col gap-2">
          <a href="/" class="text-gray-700"> site map</a>
          <a href="/blog" class="text-gray-700"> rss</a>
        </div>
        <div class="flex flex-col gap-2">
          <a href="/" class="text-gray-700"> linkedin</a>
          <a href="/blog" class="text-gray-700"> twitter</a>
        </div>
      </div>
    </footer>
  </div>
</Layout>;
